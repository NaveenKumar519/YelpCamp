<%- include("../partials/header") %>

<div class="container">
	
	<div class="row">
		<div class="col-md-4">
			<h1><%= user.firstName%><%= user.lastName%></h1>
			<div class="thumbnail">
				<img src="<%= user.avatar%>">
				<p class="caption"><%= user.email%></p>
			</div>
		</div>
		<div class="col-md-8">
			<h1><%= user.username%>'s Campgrounds</h1>
			<% for(var i=0;i<campgrounds.length;i++) { %>
				<a href="/campgrounds/<%= campgrounds[i]._id%>"><%= campgrounds[i].name %></a>
			<% } %>
		</div>
	</div>
</div>

<%- include("../partials/footer")  %>